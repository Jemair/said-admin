.saidEditor
  position relative
  border 1px solid #CCC
  border-radius 4px
  font 16px "Helvetica Neue",Helvetica,Arial,'Microsoft Yahei',sans-serif
  .saidEditorContent
    padding 1rem
    :global(.CodeMirror-placeholder)
      color #CCC
    :global(.CodeMirror)
      font 16px "Helvetica Neue",Helvetica,Arial,'Microsoft Yahei',sans-serif
      white-space pre-wrap
      word-wrap break-word
